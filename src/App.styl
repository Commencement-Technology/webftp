.App
    background $grey
    /*background rgba(239, 240, 245, .9)*/
    /*backdrop-filter blur(10px)*/
    width 100%
    height 100%

.AppContainer 
    width 100%
    height calc(100% - 37px)
    display flex

.AppHeader 
    height 24px
    -webkit-app-region drag
    display none

    &-buttons
        -webkit-app-region nodrag
        padding 4px 8px
        display inline-block

        &:hover
            .AppHeader-button
                opacity 1

            .AppHeader-button--close
                background $red

                &:before
                    content '\00d7'

            .AppHeader-button--minimize
                background $green

                &:before
                    content '-'

            .AppHeader-button--maximize
                background $orange

                &:before
                    content '+'

    &-button
        width 15px
        height 15px
        line-height 16px
        padding 0 0 2px
        text-align center
        display inline-block
        vertical-align top
        font-size 14px
        margin 0 3px
        border-radius 50%
        background none
        border none
        color #000
        cursor pointer
        background #000
        opacity .5

        &:before
            display inline-block
            transform translateY(-1px)

        &--close:hover
            background 0 4px 8px rgba($red, .2)

.AppMenu 
    width 80px
    padding 0 14px
    height 100%
    display flex
    flex-direction column
    justify-content space-between
    align-items center

    &:hover + .App
        transform translate3d(160px, 0, 0) scale(.98)
        transition .2s $ease .2s

.AppFooter 
    height 36px

.Tag
    display inline-block
    padding 4px 8px
    border-radius 4px
    font-size 14px
    background $grey
    margin 0 5px 0 0

    &--blue
        color #fff
        background $blue

    &--orange
        color #fff
        background $darkorange

