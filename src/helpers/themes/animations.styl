delay($delay = .1s)
    for $i in 1..40
        &:nth-child({$i})
            animation-delay $i*$delay


slideUp($duration = .2s, $delay = .05s)
    opacity 0 !important
    transform translate3d(0, 30px, 0)
    animation slideUp $duration forwards
    delay($delay)

.animations-enabled
    &.App
        //

    .Panel
        //

    .MenuItem
       //

    .Form
        .Input, .Checkbox, .Radio, .FormActions, fieldset
            slideUp()

    .ListItem
        slideUp()

    .FilesItem
        slideUp(.2s, .01s)

    .Empty
        slideUp(.4s, .0s)

    .ListSearch input
        animation slideLeft .3s forwards

    .MenuItem-icon
        transition .3s

@keyframes slideUp
    0%
        opacity 0
        transform translate3d(0, 30px, 0)

    100%
        opacity 1
        transform translate3d(0, 0, 0)

@keyframes slideLeft
    0%
        opacity 0
        transform translate3d(20px, 0, 0)

    100%
        opacity 1
        transform translate3d(0, 0, 0)